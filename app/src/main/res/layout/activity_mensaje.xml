<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MensajeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardview_nombre_mensaje"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_titulo_nombre_msje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del cliente"/>
                    <TextView
                        android:id="@+id/tv_nombre_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre mensaje"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_email_mensaje"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/cardview_nombre_mensaje"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_titulo_email_msje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion de correo electrÃ³nico"/>
                    <TextView
                        android:id="@+id/tv_email_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="correo@correo.com"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_telefono_mensaje"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/cardview_email_mensaje"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_titulo_telefono_msje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefono de contacto"/>
                    <TextView
                        android:id="@+id/tv_telefono_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+56900000000"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_direccion_mensaje"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/cardview_telefono_mensaje"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_titulo_direccion_msje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion del reparto"/>
                    <TextView
                        android:id="@+id/tv_direccion_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="direccion"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/cardview_texto_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/cardview_direccion_mensaje">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_titulo_texto_msje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedido"/>
                    <TextView
                        android:id="@+id/tv_texto_mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pedido"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>